{% extends 'base.html.twig' %}

{% block title %}Derniers articles{% endblock %}

{% block body %}
    <h1>Derniers articles</h1>
    {# en PHP : ! empty(articles) #}
    {% if articles is not empty %}
        <form action="{{ path('app_article_search') }}">
            <div>
                <label for="article-search">Recherche</label>
                <input type="search" name="search" id="article-search">
            </div>
            <button>Rechercher</button>
        </form>
    <ul>
        {% for article in articles %}
        <li>
            <a href="{{ path('app_article_show', {slug: article.slug}) }}">{{ article.title }}</a> - {{ article.writtenBy.name }}
            <a href="{{ path('app_article_edit', {slug: article.slug}) }}">Éditer</a>
        </li>
        {% endfor %}
    </ul>
    {% else %}
    <p>Pas d'articles</p>
    {% endif %}
    <p>Insérer un <a href="{{ path('app_article_new') }}">nouvel article</a></p>
{% endblock %}
